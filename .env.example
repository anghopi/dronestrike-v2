# === Monitoring & Logging ===
LOG_LEVEL=info
LOG_FILE_PATH=./logs/application.log
ENABLE_REQUEST_LOGGING=true

# === Security ===
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
